<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop by Category - MyStore</title>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Link to your CSS file -->
  <link rel="stylesheet" href="../css/category.css">
</head>
<body>
  <!-- Header -->
        <%- include('../components/header') %>


  <!-- Category Grid -->
  <section class="category-grid">
    <h2>Shop by Category</h2>
    <div class="grid-container">
      <div class="category-card" onclick="window.location.href='/product'">
        <div class="image-wrapper">
          <img src="../imgs/phone.jpg" alt="Electronics">
          <div class="overlay">
            <h3>Electronics</h3>
            <p>Explore the latest gadgets</p>
          </div>
        </div>
      </div>
      <div class="category-card" onclick="window.location.href='product.html'">
        <div class="image-wrapper">
          <img src="../imgs/hoodie.jpg" alt="Fashion">
          <div class="overlay">
            <h3>Fashion</h3>
            <p>Discover trendy styles</p>
          </div>
        </div>
      </div>
      <div class="category-card" onclick="window.location.href='product.html'">
        <div class="image-wrapper">
          <img src="../imgs/kitchen.jpg" alt="Home & Kitchen">
          <div class="overlay">
            <h3>Home & Kitchen</h3>
            <p>Upgrade your living space</p>
          </div>
        </div>
      </div>
      <div class="category-card" onclick="window.location.href='product.html'">
        <div class="image-wrapper">
          <img src="../imgs/1.jpg" alt="Beauty">
          <div class="overlay">
            <h3>Phones</h3>
            <p>Take a phone call</p>
          </div>
        </div>
      </div>
      <div class="category-card" onclick="window.location.href='product.html'">
        <div class="image-wrapper">
          <img src="../imgs/3.png" alt="Sports">
          <div class="overlay">
            <h3>Sports</h3>
            <p>Gear up for action</p>
          </div>
        </div>
      </div>
      <div class="category-card" onclick="window.location.href='product.html'">
        <div class="image-wrapper">
          <img src="../imgs/smart_speaker.jpg" alt="Books">
          <div class="overlay">
            <h3>speakers</h3>
            <p>Expand your music</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
        <%- include('../components/footer') %>


  <!-- Link to your JavaScript file -->
  <script src="js/category.js"></script>
</body>
</html>