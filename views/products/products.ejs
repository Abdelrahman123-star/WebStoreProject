<!DOCTYPE html>
<html lang="en">
<head>
      <!-- dah btaa3 el icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

      <!-- w dah btaa3 el fonts-->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category ? category.name + ' - ' : '' %>Products - MyStore</title>
    <link rel="stylesheet" href="../css/productsAndCart.css">
    <style>
        :root {
            --primary-color: #2d3436;
            --secondary-color: #ff5722;
            --background-color: #f8f9fa;
            --card-background: #ffffff;
            --text-color: #2d3436;
            --text-light: #636e72;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            line-height: 1.6;
        }



        .products-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .filters-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding: 1rem;
            background: var(--card-background);
            border-radius: 15px;
            box-shadow: var(--shadow);
        }

        .filter-group {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .filter-button {
            padding: 0.5rem 1rem;
            border: 1px solid #ddd;
            border-radius: 20px;
            background: white;
            cursor: pointer;
            transition: var(--transition);
        }

        .filter-button:hover {
            background: var(--secondary-color);
            color: white;
            border-color: var(--secondary-color);
        }

        .sort-select {
            padding: 0.5rem 1rem;
            border: 1px solid #ddd;
            border-radius: 20px;
            background: white;
            cursor: pointer;
        }

        .category-header {
            text-align: center;
            margin: 2rem 0;
            padding: 2rem;
            background: var(--card-background);
            border-radius: 15px;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

        .category-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--secondary-color);
        }

        .category-header h2 {
            color: var(--primary-color);
            font-size: 2rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .category-header p {
            color: var(--text-light);
            font-size: 1rem;
            max-width: 600px;
            margin: 0 auto;
        }

        .product-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
            padding: 1rem 0;
        }

        .product-card {
            background: var(--card-background);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            cursor: pointer;
            position: relative;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

        .product-image {
            position: relative;
            overflow: hidden;
            height: 250px;
        }

        .product-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .product-card:hover img {
            transform: scale(1.05);
        }

        .product-badges {
            position: absolute;
            top: 1rem;
            left: 1rem;
            display: flex;
            gap: 0.5rem;
        }

        .badge {
            padding: 0.3rem 0.8rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .badge-new {
            background: var(--secondary-color);
            color: white;
        }

        .badge-sale {
            background: #e74c3c;
            color: white;
        }

        .product-actions {
            position: absolute;
            top: 1rem;
            right: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            opacity: 0;
            transform: translateX(10px);
            transition: var(--transition);
        }

        .product-card:hover .product-actions {
            opacity: 1;
            transform: translateX(0);
        }

        .action-button {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: white;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow);
        }

        .action-button:hover {
            background: var(--secondary-color);
            color: white;
        }

        .product-info {
            padding: 1.5rem;
        }

        .product-card h3 {
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
            color: var(--primary-color);
        }

        .price-container {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin: 0.5rem 0;
        }

        .price {
            color: var(--secondary-color);
            font-size: 1.3rem;
            font-weight: 600;
        }

        .original-price {
            color: var(--text-light);
            text-decoration: line-through;
            font-size: 1rem;
        }

        .discount {
            color: #e74c3c;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .stock-badge {
            display: inline-block;
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            margin-top: 0.5rem;
        }

        .in-stock {
            background-color: #e3fcef;
            color: #00b894;
        }

        .low-stock {
            background-color: #fff3e0;
            color: #f39c12;
        }

        .out-of-stock {
            background-color: #ffe5e5;
            color: #e74c3c;
        }

        .product-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #eee;
            font-size: 0.9rem;
            color: var(--text-light);
        }

        .rating {
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }

        .rating i {
            color: #ddd;
            font-size: 0.9rem;
        }

        .rating i.active {
            color: #ffd700;
        }

        .rating span {
            font-size: 0.9rem;
            color: #666;
        }

        .no-reviews {
            color: #999;
            font-size: 0.9rem;
            font-style: italic;
        }

        .no-products {
            text-align: center;
            padding: 4rem 2rem;
            background: var(--card-background);
            border-radius: 15px;
            box-shadow: var(--shadow);
        }

        .no-products i {
            font-size: 4rem;
            color: var(--secondary-color);
            margin-bottom: 1.5rem;
            opacity: 0.5;
        }

        .no-products h3 {
            color: var(--primary-color);
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .no-products p {
            color: var(--text-light);
            max-width: 400px;
            margin: 0 auto;
        }

        /* Quick view overlay */
        .quick-view {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: var(--transition);
        }

        .product-card:hover .quick-view {
            opacity: 1;
        }

        .quick-view button {
            background: var(--secondary-color);
            color: white;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 25px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
        }

        .quick-view button:hover {
            background: #e64a19;
            transform: scale(1.05);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .product-list {
                grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
                gap: 1.5rem;
            }

            .category-header {
                padding: 1.5rem;
            }

            .category-header h2 {
                font-size: 1.5rem;
            }

            .filters-bar {
                flex-direction: column;
                gap: 1rem;
            }

            .filter-group {
                width: 100%;
                justify-content: space-between;
            }
        }

        @media (max-width: 480px) {
            .product-list {
                grid-template-columns: 1fr;
            }

            .products-container {
                margin: 1rem auto;
            }
        }

        .rating-filter-container {
            background: white;
            padding: 1rem;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .rating-label {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 0.8rem;
            font-weight: 500;
            color: #2d3436;
        }

        .clear-rating {
            background: none;
            border: none;
            color: #e74c3c;
            cursor: pointer;
            padding: 0.2rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
        }

        .clear-rating:hover {
            background: #ffe5e5;
            transform: scale(1.1);
        }

        .star-rating {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
        }

        .stars-container {
            display: flex;
            gap: 0.3rem;
        }

        .star-btn {
            background: none;
            border: none;
            padding: 0.3rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .star-btn i {
            font-size: 1.5rem;
            color: #ddd;
            transition: all 0.2s ease;
        }

        .star-btn:hover i,
        .star-btn.active i {
            color: #ffd700;
            transform: scale(1.1);
        }

        .stars-container:hover .star-btn i {
            color: #ddd;
        }

        .stars-container:hover .star-btn:hover i,
        .stars-container:hover .star-btn:hover ~ .star-btn i {
            color: #ffd700;
        }

        .rating-text {
            font-size: 0.9rem;
            color: #666;
            text-align: center;
        }

        @media (max-width: 768px) {
            .rating-filter-container {
                padding: 0.8rem;
            }
            
            .star-btn i {
                font-size: 1.3rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <%- include('../components/header') %>
    <%- include('../components/backButton') %>

    <main class="products-container">


        <% if (category) { %>
            <div class="category-header">
                <h2><%= category.name %></h2>
                <% if (category.description) { %>
                    <p><%= category.description %></p>
                <% } %>
            </div>
        <% } %>

        <div class="filters-bar">
            <div class="filter-group">
                <button class="filter-button <%= currentFilter === 'all' ? 'active' : '' %>" data-filter="all">All</button>
                <button class="filter-button <%= currentFilter === 'on-sale' ? 'active' : '' %>" data-filter="on-sale">On Sale</button>
            </div>
            <div class="filter-group">
                <select id="sortSelect" onchange="updateSort(this.value)">
                    <option value="newest" <%= currentSort === 'newest' ? 'selected' : '' %>>Newest</option>
                    <option value="price-low" <%= currentSort === 'price-low' ? 'selected' : '' %>>Price: Low to High</option>
                    <option value="price-high" <%= currentSort === 'price-high' ? 'selected' : '' %>>Price: High to Low</option>
                    <option value="rating" <%= currentSort === 'rating' ? 'selected' : '' %>>Highest Rated</option>
                </select>
            </div>
            <div class="filter-group">
                <div class="rating-filter-container">
                    <div class="rating-label">
                        <span>Rating</span>
                        <% if (currentRating) { %>
                            <button class="clear-rating" onclick="clearRating()">
                                <i class="fas fa-times"></i>
                            </button>
                        <% } %>
                    </div>
                    <div class="star-rating">
                        <div class="stars-container">
                            <% for(let i = 5; i >= 1; i--) { %>
                                <button class="star-btn <%= currentRating && i <= parseInt(currentRating) ? 'active' : '' %>"
                                        data-rating="<%= i %>"
                                        onclick="updateRating('<%= i %>')"
                                        type="button">
                                    <i class="fas fa-star"></i>
                                </button>
                            <% } %>
                        </div>
                        <span class="rating-text"><%= currentRating ? currentRating + ' stars & up' : 'Select rating' %></span>
                    </div>
                </div>
            </div>
        </div>

        <section class="product-list">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product-card" onclick="window.location.href='/products/detail/<%= product._id %>'">
                        <div class="product-image">
                            <% if (product.imageUrl && product.imageUrl.trim() !== '') { %>
                                <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                            <% } else if (product.imagePath && product.imagePath.trim() !== '') { %>
                                <img src="<%= product.imagePath %>" alt="<%= product.name %>">
                            <% } else { %>
                                <img src="/imgs/img-notfound.jpg" alt="Image Not Found">
                            <% } %>
                            <div class="product-badges">
                                <% if (product.hasDiscount) { %>
                                    <span class="badge badge-sale"><%= product.discountPercentage %>% OFF</span>
                                <% } %>
                            </div>
                            <div class="product-actions">
                                <button class="action-button"><i class="fas fa-heart"></i></button>
                                <button class="action-button"><i class="fas fa-eye"></i></button>
                                <button class="action-button"><i class="fas fa-shopping-cart"></i></button>
                            </div>
                        </div>
                        <div class="product-info">
                            <h3><%= product.name %></h3>
                            <div class="price-container">
                                <% if (product.hasDiscount) { %>
                                    <span class="original-price">EGP <%= product.originalPrice %></span>
                                    <span class="price">EGP <%= product.discountedPrice %></span>
                                <% } else { %>
                                    <span class="price">EGP <%= product.price %></span>
                                <% } %>
                            </div>
                            <% if (product.stock > 0) { %>
                                <span class="stock-badge <%= product.stock > 10 ? 'in-stock' : 'low-stock' %>">
                                    <%= product.stock > 10 ? 'In Stock' : 'Low Stock' %>
                                </span>
                            <% } else { %>
                                <span class="stock-badge out-of-stock">Out of Stock</span>
                            <% } %>
                            <div class="product-meta">
                                <div class="rating">
                                    <% if (product.numberOfReviews > 0) { %>
                                        <% for(let i = 1; i <= 5; i++) { %>
                                            <i class="fas fa-star <%= i <= Math.round(product.rating) ? 'active' : '' %>"></i>
                                        <% } %>
                                        <span>(<%= product.rating.toFixed(1) %>)</span>
                                    <% } else { %>
                                        <span class="no-reviews">No reviews yet</span>
                                    <% } %>
                                </div>
                                <span>Sold: <%= product.soldCount || 0 %></span>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="no-products">
                    <i class="fas fa-box-open"></i>
                    <h3>No Products Found</h3>
                    <p>There are no products available in this category at the moment.</p>
                </div>
            <% } %>
        </section>
    </main>

    <%- include('../components/footer') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filterButtons = document.querySelectorAll('.filter-button');
            const sortSelect = document.getElementById('sortSelect');

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const filter = this.dataset.filter;
                    const currentSort = sortSelect.value;
                    const url = new URL(window.location.href);
                    url.searchParams.set('filter', filter);
                    url.searchParams.set('sort', currentSort);
                    window.location.href = url.toString();
                });
            });

            sortSelect.addEventListener('change', function() {
                const sort = this.value;
                const currentFilter = document.querySelector('.filter-button.active').dataset.filter;
                const url = new URL(window.location.href);
                url.searchParams.set('sort', sort);
                url.searchParams.set('filter', currentFilter);
                window.location.href = url.toString();
            });
        });

        function updateSort(value) {
            const urlParams = new URLSearchParams(window.location.search);
            const currentFilter = document.querySelector('.filter-button.active').dataset.filter;
            urlParams.set('sort', value);
            urlParams.set('filter', currentFilter);
            window.location.search = urlParams.toString();
        }

        function updateRating(value) {
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.set('rating', value);
            window.location.search = urlParams.toString();
        }

        function clearRating() {
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.delete('rating');
            window.location.search = urlParams.toString();
        }

        // Add hover effect for stars
        document.addEventListener('DOMContentLoaded', function() {
            const starsContainer = document.querySelector('.stars-container');
            const starButtons = document.querySelectorAll('.star-btn');
            const ratingText = document.querySelector('.rating-text');

            starButtons.forEach(star => {
                star.addEventListener('mouseenter', function() {
                    const rating = this.dataset.rating;
                    ratingText.textContent = rating + ' stars & up';
                });

                star.addEventListener('mouseleave', function() {
                    const currentRating = new URLSearchParams(window.location.search).get('rating');
                    ratingText.textContent = currentRating ? currentRating + ' stars & up' : 'Select rating';
                });
            });
        });
    </script>
</body>
</html>